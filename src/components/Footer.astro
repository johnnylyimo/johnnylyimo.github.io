---
import {Image} from 'astro:assets'
import myImg from '../../public/john.jpg'

const year = new Date().getFullYear();
---
<footer class="flex justify-center items-center gap-x-4 mt-20 pb-2">
    <Image src={myImg} width={96} alt='my profile image' class="rounded-full object-cover" />
    <div class='flex items-center gap-x-1'>John Lyimo 
        <span class='text-2xl'>
            &copy; 
        </span> 
        {year} All Rights Reserved
    </div>
</footer>

<style>
	@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500&display=swap');

	footer{
		font-family: 'Poppins', sans-serif;
	}
</style>
