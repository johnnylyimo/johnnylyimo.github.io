---
import {Image} from 'astro:assets'
// import myImg from '../../public/john.jpg'
import myImg from '../assets/john.jpg'

const year = new Date().getFullYear();
---
<footer class="flex justify-center items-center gap-x-4 py-2">
    <Image src={myImg} width={96} alt='my profile image' quality={'max'} class="rounded-full object-cover" />
    <div class='flex flex-col md:flex-row items-center gap-x-1 text-md md:text-lg lg:text-2xl'>John Lyimo 
        <div class='flex items-center justify-center gap-x-1'>
                <span class='text-2xl md:text-3xl'>
                    &copy; 
                </span> 
                    {year} All Rights Reserved
            </div>
    </div>
</footer>

<style>
	@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500&display=swap');

	footer{
		font-family: 'Poppins', sans-serif;
	}
</style>
